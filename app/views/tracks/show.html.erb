<h1>Showing song <%= @track.name %> within album <%= @album.name %></h1>
<%= link_to "Edit track", edit_track_url(@track) %>
<%= button_to "Delete track", track_url(@track), method: :delete %>
<h2>Lyrics</h2>
<p>
  <%= ugly_lyrics(@track.lyrics)%>
</p>

<h2>Notes</h2>
<%= render "notes/note", notes: @track.notes %>
<br>
<h2>Make a note</h2>
<%= render "notes/form", track: @track %>
