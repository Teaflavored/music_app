<form action="<%= action_url  %>"
      method="POST">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">
  
  <% if action == "PATCH" %>
    <input type="hidden"
           name="_method"
           value="PATCH">
  <% end %>
  <%= render "layouts/errors" %>
  <label for="track_name">Track name</label>
  <input type="text"
         name="track[name]"
         value="<%= track.name %>"
         id="track_name">
  <br>
  
  <label for="track_album">
  <select name="track[album_id]"
          id="track_album">
    <option selected value="<%= album.id %>"><%= album.name %>
    </option>
  </select>
  <br>
  
  <label for="track_type_bonus">Bonus</label>
  <input type="radio" 
         name="track[track_type]" 
         id="track_type_bonus"
         value="bonus"
         <%= "checked" if track.track_type == "bonus" %>>
         
  <label for="track_type_regular">Regular</label>
  <input type="radio" 
         name="track[track_type]" 
         id="track_type_regular"
         value="regular"
         <%= "checked" if track.track_type == "regular" %>>
  <br>
  
  <label for="track_lyrics">Lyrics</label>
  
  <textarea name="track[lyrics]"
            id="track_lyrics"><%= track.lyrics %>
  </textarea>
  <br>
  
  <input type="submit" value="<%= msg %>">
</form>