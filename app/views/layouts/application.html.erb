<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:success] || flash[:activate_errors] %>
    <% msgs = flash[:success] || flash[:activate_errors] %>
    <ul>
      <% msgs.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  
  <% if logged_in? %>
    <%= button_to "Sign out!", "/session" , method: :delete %>
  <% else %>
    <% link_to "Sign in!", new_session_url %>
  <% end %>
<%= yield %>

</body>
</html>
