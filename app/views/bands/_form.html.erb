<form action="<%= action_url %>"
      method="POST">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">
  <%= render "layouts/errors" %>       
  <% if action == "PATCH" %>
    <input type="hidden"
           name="_method"
           value="PATCH">
  <% end %>
  <label for="band_name">Band name</label>
  <input type="text"
         name="band[name]"
         value="<%= band.name %>"
         id="band_name">
  <br>
  <input type="submit" value="<%= msg %>">
</form>